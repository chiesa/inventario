<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
    <!-- Page Loader -->
    <%- include("./partials/nav.ejs") %>

    <div style="height:50px"></div>

    <div class="container-fluid tm-container-content tm-mt-60">
        <div class="row tm-mb-90" style="width:90%;">
            <div class="col-xl-8 col-lg-7 col-md-6 col-sm-12" >
                <img alt="Image" class="img-fluid"
                     src="data:image/<%=obj.img.contentType%>;base64,
                     <%=obj.img.data.toString('base64')%>" style="max-height:700px;display:block;margin-left:auto;margin-right:3px;">
            </div>

            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-12">
            
                <form id="contact-form" action="/modify/<%= obj.id %>" method="POST" class="tm-contact-form mx-auto" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control rounded-0" placeholder="Name" value="<%= obj.name%>" />
                    </div>

                    <div class="form-group">
                        <textarea rows="8" name="desc" class="form-control rounded-0" placeholder="description" ><%= obj.desc %></textarea>
                    </div>

                    <div class="form-group">
                        <div class="form-control rounded-0" style="width:30%;border-color: transparent;display: inline;">TIPOLOGIA:</div>
                        <select id="selectType" class="form-control rounded-0" style="width:60%;display: inline;text-align:center;">
                            <% 
                                array.forEach( (elem) =>{ %>
                                    <option value=<%= elem %> <%if(elem==obj.type && elem){%>selected="selected"<%}else if(elem=="Altro"){%>selected="selected"<%}%> ><%= elem %></option>
                                <% })
                            %>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <input type="text" name="author" class="form-control rounded-0" placeholder="autore"  value="<%= obj.autor %>"/>
                    </div>

                    <div class="form-group">
                        <input type="text" name="pos" class="form-control rounded-0" placeholder="position" value="<%= obj.pos %>"/>
                    </div>

                    <div class="form-group">
                        <input type="text" name="stanza" class="form-control rounded-0" placeholder="stanza" value="<%= obj.stanza %>"/>
                    </div>
                    <div class="form-group">
                        <input type="text" name="scatola" class="form-control rounded-0" placeholder="scatola" value="<%= obj.scatola%>"/>
                    </div>
                    <div class="form-group">
                        <input type="text" name="num_id" class="form-control rounded-0" placeholder="numero identificativo" value="<%= obj.num_id%>"/>
                    </div>

                    <div class="form-group">
                        <div>
                            <input type="file" id="image" 
                                name="image" class="btn btn-primary" style="width: 100%;">
                        </div>
                    </div>
                    <div class="form-group tm-text-right">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>                

            </div>
        </div>


    <%- include("./partials/footer.ejs") %>
    
    <script src="/js/plugins.js"></script>
    <script>
        $(window).on("load", function() {
            $('body').addClass('loaded');
        });
    </script>
</body>
</html>