        </div>
        <% if (obj.length > 0) { %>
            
                <div class="row tm-mb-90 tm-gallery">
                    <% obj.forEach(obj => { %>
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-5">
                        <a class="single" href="/object/<%= obj._id %>" style="color:rgb(173, 186, 206);text-decoration: none;">
                        <figure class="effect-ming tm-video-item" style="border-style:solid;border-color:rgb(173, 186, 206);margin-left:10px;margin-right:10px;margin-top:10px;margin-bottom:10px;height: 350px;">
                            <img src="data:image/<%=obj.img.contentType%>;base64,
                                    <%=obj.img.data.toString('base64')%>" style="width:95%;margin-left:8px;margin-top:10px;max-width: 280px;  display: block;margin-left: auto;margin-right: auto">
                            <figcaption class="d-flex align-items-center justify-content-center" style="text-align:center">
                                <h2><%= obj.name %><br></h2>
                                <a class="single" href="/object/<%= obj._id %>" style="position:absolute;bottom:0;">View more</a>
                            </figcaption>
                        </figure>
                        </a>
                    </div>
                <% }) %>
                </div>
            
        <% } else { %>
            <p>There are no object to display...</p>
        <% } %>
    </div>
        
    
